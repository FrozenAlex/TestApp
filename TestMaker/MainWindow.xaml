<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestMaker"
        xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="TestMaker.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="445" Width="723">
    <Window.Resources>
        <DataTemplate x:Key="AnswersTemplate">
            <Border Margin="1" BorderThickness="0" BorderBrush="Black" CornerRadius="1">
                <Grid Margin="3">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <CheckBox Content="{Binding text}" IsChecked="{Binding selected}"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="178*"/>
            <ColumnDefinition Width="537*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TestName" HorizontalAlignment="Left" Height="21" Margin="72,2,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="101"/>
        <TextBox x:Name="Test" HorizontalAlignment="Left" Height="21" Margin="70,73,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="101"/>
        <Label x:Name="label" Content="TestName" HorizontalAlignment="Left" Height="32" Margin="4,-2,0,0" VerticalAlignment="Top" Width="66"/>
        <Label x:Name="label1" Content="Time" HorizontalAlignment="Left" Height="31" Margin="19,76,0,0" VerticalAlignment="Top" Width="42"/>
        <RichTextBox x:Name="richTextBox" Grid.Column="1" Margin="0,29,0,1">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ComboBox x:Name="comboBox1" Grid.Column="1" HorizontalAlignment="Right" Height="21" Margin="0,5,10,0" VerticalAlignment="Top" Width="144" SelectedIndex="1">
            <ComboBoxItem Content="Image"/>
            <ComboBoxItem Content="Text"/>
            <ComboBoxItem Content="RichText"/>
        </ComboBox>
        <Label x:Name="label2" Content="Question Type" Grid.Column="1" HorizontalAlignment="Right" Margin="0,3,159,0" VerticalAlignment="Top" Height="26" Width="86"/>
        <ComboBox x:Name="comboBox1_Copy" Grid.Column="1" Height="21" Margin="0,4,10,0" VerticalAlignment="Top" SelectedIndex="1" HorizontalAlignment="Right" Width="144" Grid.Row="1">
            <ComboBoxItem Content="Image"/>
            <ComboBoxItem Content="Text"/>
            <ComboBoxItem Content="RichText"/>
        </ComboBox>
        <Label x:Name="label2_Copy" Content="Answer Type" Grid.Column="1" HorizontalAlignment="Right" Margin="0,2,154,0" VerticalAlignment="Top" Height="26" Width="86" Grid.Row="1"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="98,113,0,0" VerticalAlignment="Top" Width="69" Height="18"/>
        <Label x:Name="label1_Copy" Content="Test Password" HorizontalAlignment="Left" Height="31" Margin="10,106,0,0" VerticalAlignment="Top" Width="83"/>
    </Grid>
</Window>
