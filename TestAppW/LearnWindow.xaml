<Window x:Class="TestApp.LearnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        mc:Ignorable="d"
        Title="Обучение" Height="592.398" Width="804.706">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="237*"/>
            <ColumnDefinition Width="560*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="LectureList" HorizontalAlignment="Left" Margin="10,34,0,10" Width="138" SelectionChanged="LectureList_SelectionChanged">
            <ListBox.ItemContainerStyle>
                <Style>
                    <Setter Property="ListBoxItem.Padding" Value="7"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <RichTextBox x:Name="LectureView" Margin="153,10,10,10" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Выберите лекцию слева"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="button" Content="Начать тест" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="138" Height="21" Click="button_Click"/>

    </Grid>
</Window>
