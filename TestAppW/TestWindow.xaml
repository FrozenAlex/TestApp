<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestAppW"
        mc:Ignorable="d"
        Title="Test App" Height="441" Width="598.667" BorderThickness="0" Closing="Window_Closing">
    <Window.Resources>
        <DataTemplate x:Key="AnswersTemplate">
            <Border Margin="1" BorderThickness="0" BorderBrush="Black" CornerRadius="1">
                <Grid Margin="3">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <CheckBox Content="{Binding Path=Text}" IsChecked="{Binding Path=Selected}"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition MaxWidth="200" Width="53*"/>
            <ColumnDefinition MinWidth="200" Width="538*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="SaveButton" Grid.Column="1" Content="Save" HorizontalAlignment="Left" Height="43" Margin="0,46,0,0" VerticalAlignment="Top" Width="48" Click="button_Click"/>
        <Button x:Name="LoadButton" Grid.Column="1" Content="Load"  HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="48" Click="button1_Click"/>
        <TextBox  x:Name="QuestionText" Grid.Column="2" Text="{Binding Path=.Text}" TextWrapping="Wrap" TextAlignment="Center" FontSize="20" VerticalContentAlignment="Center"/>

        <ListBox ItemTemplate="{StaticResource AnswersTemplate}" x:Name="listBox" ItemsSource="{Binding answers, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Grid.Row="1"  Margin="4,33,0,0">
        </ListBox>
        <Canvas Margin="199,4,197,182" Grid.Row="1" Grid.Column="2">
            <Button x:Name="nextButton" Content="&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Click="button_Navigation" Height="20" Canvas.Left="47" Canvas.Top="4"/>
            <Button x:Name="prevButton" Content="&lt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19" Click="button_Navigation" Height="20" Canvas.Top="4"/>
            <Label x:Name="questionNum" Content="1" HorizontalContentAlignment="Center" Height="26" Width="28" Canvas.Left="19"/>
        </Canvas>
        <Button x:Name="button1" Content="Begin Test" Grid.Column="1" HorizontalAlignment="Left" Height="39" Margin="0,89,0,0" VerticalAlignment="Top" Width="48" Click="button1_Click_1"/>
        <Label x:Name="timeLabel" Content="Time: 22:20" Grid.Column="2" HorizontalAlignment="Left" Margin="352,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="70" Height="26"/>
        <Button x:Name="GradeButton" Content="Button" HorizontalAlignment="Left" Margin="0,128,0,0" VerticalAlignment="Top" Width="48" Click="GradeButton_Click" Grid.Column="1" Height="46"/>
    </Grid>
</Window>
